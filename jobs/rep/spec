---
name: rep

templates:
  rep_ctl.erb: bin/rep_ctl
  syslog_forwarder.conf.erb: config/syslog_forwarder.conf

packages:
  - pid_utils
  - rep
  - syslog_forwarder

properties:
  syslog_aggregator.address:
    description: "The address to which rsyslog will forward log messages"

  syslog_aggregator.port:
    description: "The port to which rsyslog will forward log messages"

  rep.etcd.machines:
    description: "IPs pointing to the ETCD cluster"

  rep.stack:
    description: "the stack for which to handle requests"
    default: "lucid64"

  rep.az_number:
    description: "The number of the Availability Zone or Cluster that this Rep is on. E.g. if the Reps/Executors are distributed across 3 AZs, this should be a number 0-2.  If you follow the convention of naming the executor job executor_z<n>, it's conventional to set rep.az_number to <n-1>"

  rep.executor.url:
    description: "URL of the executor to represent."
    default: "http://127.0.0.1:1700"

  rep.nats.username:
    description: "Username for server authentication."
  rep.nats.password:
    description: "Password for server authentication."
  rep.nats.port:
    description: "The port for the NATS server to listen on."
    default: 4222
  rep.nats.machines:
    description: "IP of each NATS cluster member."

  network_name:
    description: "Name of the network that the job lives in; used to figure out our IP."
